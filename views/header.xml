<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- themed header option  -->
     <template id="template_header_opt" inherit_id="website.snippet_options" name="Header Template - Option">
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button title="rocks"
                data-customize-website-views="rocks.header"
                data-customize-website-variable="'rocks'"
                data-img="/rocks/static/src/img/wbuilder/tour.jpg"/>
        </xpath>
    </template>

    <!-- themed header  -->
    <record id="header" model="ir.ui.view">
        <field name="name">Rocks Header</field>
        <field name="type">qweb</field>
        <field name="key">rocks.header</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//header//nav" position="replace">
                <div class="header-flex bg-primary d-flex px-5 py-3 justify-content-between position-relative">
                    <div class="header-nav d-flex align-items-center list-unstyled">
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                                <t t-set="item_class" t-valuef="nav-item"/>
                                <t t-set="link_class" t-valuef="nav-link link-secondary"/>
                            </t>
                        </t>
                    </div>
                    <div class="header-logo position-absolute" style="left:45%;">
                        <t t-call="website.placeholder_header_brand">
                            <t t-set="_link_class" t-valuef="d-block h-25"/>
                        </t>
                    </div>
                    <div class="header-login list-unstyled">
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-valuef="nav-item"/>
                            <t t-set="_link_class" t-valuef="nav-link link-secondary"/>
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_user_name" t-value="true"/>
                            <t t-set="_icon" t-value="false"/>
                            <t t-set="_avatar" t-value="false"/>
                            <t t-set="_item_class" t-valuef="nav-item dropdown"/>
                            <t t-set="_link_class" t-valuef="nav-link link-secondary fs-5"/>
                            <t t-set="_dropdown_menu_class" t-valuef="bg-secondary user-menu"/>
                        </t>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>