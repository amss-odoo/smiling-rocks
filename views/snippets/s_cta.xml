<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_cta" name="Newsletter">
        <section class="s_cta" data-name="Newsletter" data-snippet="newsletter">
            <div class="py-3" style="background-color:#7a6b64;height:50vh;">
                <div class="container cta-bg p-3 h-100">
                    <div class="cta-box row h-100 rounded-3 overflow-hidden">
                        <div class="cta-img col-6 h-100">
                            <!-- <img src="/web/image/rocks.cta_bg" alt="Paper Planes" class="cta"/> -->
                        </div>
                        <div class="cta-action d-flex flex-column col-6 align-items-center justify-content-center h-100 gap-2">
                            <h3 class="cta-heading fw-bold">Let's Smile Together</h3>
                            <p class="cta-text">Get early access to new products and special offers!</p>
                            <input type="email" placeholder="johndoe@email.com" class="p-2 rounded-2 border-1"/>
                            <button class="btn btn-secondary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>