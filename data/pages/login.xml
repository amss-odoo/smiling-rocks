<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web.login" name="Login">
        <t t-call="web.login_layout">
            <div class="satin d-flex align-items-center justify-content-center ">
            
            <form class="oe_login_form form-div m-0 mw-100 h-100" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
                <div class="p-3 row w-100 h-100 align-items-center justify-content-between">
                    <div class="login-text-box d-flex flex-column justify-content-center col-4">
                        <p class="login-main-text inter text-primary fst-italic">
                            Log In
                        </p>
                        <h2 class="login-heading lora text-primary text-uppercase fst-italic fw-bold">
                            Welcome, How've you been?
                        </h2>
                        <p class="login-sub-text inter text-primary fs-6 fw-light">
                            Sign in to check your orders.
                        </p>
                    </div>

                    <div class="form-box rounded col-6 d-flex flex-column">
                        <div class="d-flex flex-column justify-content-around h-100">
                        <h3 class="form-heading fw-bold inter text-uppercase fst-italic text-secondary">Your Account</h3>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="mb-3" t-if="databases and len(databases) &gt; 1">
                            <label for="db" class="col-form-label">Database</label>
                            <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                                <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i></a>
                            </div>
                        </div>

                        <div class="mb-3 field-login">
                            <label for="login" class="form-label fs-3 inter fst-italic">Email</label>
                            <input type="text" placeholder="johndoe@email.com" name="login" t-att-value="login" id="login" t-attf-class="p-2 h-75 form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                        </div>

                        <div class="mb-3 field-login">
                            <label for="password" class="form-label fs-3 inter fst-italic">Password</label>
                            <input type="password" placeholder="Password" name="password" id="password" t-attf-class="p-2 h-75 form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message"/>
                        </p>

                        <div t-attf-class="clearfix oe_login_buttons text-center gap-1 d-grid justify-content-start mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                            <button type="submit" class="btn btn-light fs-4">Log in</button>
                            <t t-if="debug">
                                <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm link-secondary">Log in as superuser</button>
                            </t>
                            <div class="o_login_auth"/>
                        </div>

                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        </div>
                    </div>
                </div>
            </form>
            </div>
        </t>
    </template>
</odoo>